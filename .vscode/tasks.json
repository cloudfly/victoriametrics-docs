	"version": "2.0.0",
	"isBackground": true,
	"tasks": [
	  {

		"label": "hugo:relref",
		"type": "shell",
		"isBackground": true,
		"command": "perl -i -p -e 's/\\(([.\\/\\w-]+?.md(#[\\w-]+)?)\\)/({{< relref \"\\1\" >}})/g' ${file}"
	  }
	]
  }
